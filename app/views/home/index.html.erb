<%# JavaScript for filtering functionality %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('calculator-search');
    const allButton = document.getElementById('category-all');
    const financingButton = document.getElementById('category-financing');
    const investmentButton = document.getElementById('category-investment');
    const transactionButton = document.getElementById('category-transaction');
    const calculatorsHeading = document.getElementById('calculators-heading');
    const calculatorCards = document.querySelectorAll('#calculators-grid > div');
    const popularCalculators = document.getElementById('popular-calculators');

    let activeCategory = 'all';
    let searchTerm = '';

    // Filter function
    function filterCalculators() {
      let resultsCount = 0;

      calculatorCards.forEach(card => {
        const category = card.getAttribute('data-category');
        const tags = card.getAttribute('data-tags').split(',');
        const cardText = card.textContent.toLowerCase();

        const matchesCategory = activeCategory === 'all' || category === activeCategory;
        const matchesSearch = searchTerm === '' ||
          cardText.includes(searchTerm) ||
          tags.some(tag => tag.includes(searchTerm));

        if (matchesCategory && matchesSearch) {
          card.style.display = '';
          resultsCount++;
        } else {
          card.style.display = 'none';
        }
      });

      // Update heading based on search
      if (searchTerm) {
        calculatorsHeading.textContent = 'Search Results';
        popularCalculators.style.display = 'none';
      } else {
        calculatorsHeading.textContent = 'All Calculators';
        if (activeCategory === 'all') {
          popularCalculators.style.display = '';
        } else {
          popularCalculators.style.display = 'none';
        }
      }

      // If no results found
      if (resultsCount === 0) {
        const existingNoResults = document.getElementById('no-results-container');
        if (!existingNoResults) {
          const noResultsDiv = document.createElement('div');
          noResultsDiv.className = 'empty-state';
          noResultsDiv.id = 'no-results-container';
          noResultsDiv.innerHTML = `
            <svg xmlns="http://www.w3.org/2000/svg" class="empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="empty-title">No calculators found</h3>
            <p class="empty-message">Try adjusting your search or filters.</p>
          `;

          document.getElementById('calculators-grid').appendChild(noResultsDiv);
        }
      } else {
        const existingNoResults = document.getElementById('no-results-container');
        if (existingNoResults) {
          existingNoResults.remove();
        }
      }
    }

    // Search input event
    searchInput.addEventListener('input', function() {
      searchTerm = this.value.toLowerCase();
      filterCalculators();
    });

    // Category button events
    allButton.addEventListener('click', function() {
      setActiveCategory('all');
      activeCategory = 'all';
      filterCalculators();
    });

    financingButton.addEventListener('click', function() {
      setActiveCategory('financing');
      activeCategory = 'financing';
      filterCalculators();
    });

    investmentButton.addEventListener('click', function() {
      setActiveCategory('investment');
      activeCategory = 'investment';
      filterCalculators();
    });

    transactionButton.addEventListener('click', function() {
      setActiveCategory('transaction');
      activeCategory = 'transaction';
      filterCalculators();
    });

    // Helper to set active category button styles
    function setActiveCategory(category) {
      // Reset all buttons
      [allButton, financingButton, investmentButton, transactionButton].forEach(btn => {
        btn.className = 'filter-button filter-button-default';
      });

      // Set active button
      let activeButton;
      switch (category) {
        case 'all':
          activeButton = allButton;
          break;
        case 'financing':
          activeButton = financingButton;
          break;
        case 'investment':
          activeButton = investmentButton;
          break;
        case 'transaction':
          activeButton = transactionButton;
          break;
      }

      activeButton.className = 'filter-button filter-button-active';
    }
  });
</script>
